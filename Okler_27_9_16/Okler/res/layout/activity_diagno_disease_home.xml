<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.okler.diagno.DiagnoDiseaseHome" >
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/topLayout" 
        android:orientation="vertical">
    	<include 
            android:id="@+id/toolbar" 
            layout="@layout/tool_bar_extended_search_no_cart"
            />
    	
		<RelativeLayout 
    	android:id="@+id/titleLayout"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:background="@color/ModerateMagenta">
    	
     		<TextView 
			    android:id="@+id/select_disease_activity_heading"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="6dp"
			    android:layout_marginBottom="6dp"
			    android:textSize="16sp"
			    android:textColor="@color/White"
			    android:text="@string/select_diseases"
			    android:gravity="center"
			    />
   	</RelativeLayout>
	</LinearLayout>
			<TextView
		    android:id="@+id/currentPosition_Diagno_dis"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"    
		    android:text="#"
		    android:textColor="@color/Red"
		    android:textSize="22sp"
		    android:layout_marginLeft="10dp"
			android:layout_below="@+id/topLayout"
			/>
			<TextView
    android:id="@+id/search_history"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/topLayout"
    android:layout_marginRight="6dp"
    android:background="@null"
    android:text="@string/view_search_history"
    android:textColor="#99d5e3"
    android:textSize="16sp" />

<RelativeLayout 
    android:id="@+id/separatorRL"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/currentPosition_Diagno_dis"
    
    >
   <include layout="@layout/separator_1dp"/>
</RelativeLayout>
			<TextView
    android:id="@+id/no_items"
    android:layout_below="@id/currentPosition_Diagno_dis"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"    
    android:text="No Data Available"
    android:textColor="@color/Black"
    android:textSize="22sp"
    android:visibility="gone"
    android:layout_marginLeft="10dp"
	/>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:id="@+id/relParent"    
    android:layout_below="@id/currentPosition_Diagno_dis"
    android:layout_above="@+id/bottomLayout"
    android:layout_alignParentRight="true"
    android:orientation="horizontal"
    >
    <!-- <ListView
        android:id="@+id/lvDiagnoDiseases"
        android:layout_width="0dp"
        android:layout_weight="85"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:divider="@null"
        >
    </ListView>  -->
    <android.support.v7.widget.RecyclerView
    	     android:id="@+id/lvTests2"
        android:layout_marginTop="5dp"
        android:layout_width="0dp"
        android:layout_weight="85"
        android:scrollbars="vertical"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:divider="@null"
    	    />
	<ListView
        android:id="@+id/alphabetsScrView"
        android:layout_width="0dp"
        android:layout_weight="15"
        android:layout_height="wrap_content"  
        android:divider="@null"              
         android:layout_alignParentRight="true">
    </ListView>
    </LinearLayout>

     <LinearLayout 
        android:id="@id/bottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
		 <Button
   		 	android:id="@+id/nextButn"
    		android:layout_width="fill_parent"
		    android:layout_height="wrap_content"    
		    android:layout_above="@+id/bottombar"    
		    android:background="@color/ModerateMagenta"
		    android:textColor="@color/White"
		    android:text="@string/next_btn"
		    android:layout_marginTop="6dp"
		    android:layout_marginBottom="6dp"
		    android:textSize="16sp"/> 
		    
				<include
		    	android:layout_alignParentBottom="true"
		        android:id="@+id/bottombar"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        layout="@layout/layout_bottom_bar"/>
	</LinearLayout>
	    <LinearLayout 
        android:orientation="vertical" 
        android:layout_height="wrap_content" 
        android:layout_width="wrap_content" 
        android:id="@+id/progressLinLayout" 
        android:gravity="center" 
        android:visibility="gone" 
        android:layout_centerInParent="true">
	<ProgressBar 
	    android:layout_height="wrap_content" 
	    android:layout_width="wrap_content" 
	    android:indeterminate="true"/>
    </LinearLayout>
</RelativeLayout>
 