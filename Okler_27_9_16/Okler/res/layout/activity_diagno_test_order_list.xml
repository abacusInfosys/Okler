<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGreyWhite" >

    <include
        android:id="@+id/toolbar"
        android:layout_width="fill_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        layout="@layout/tool_bar" />

    <TextView
        android:id="@+id/txt_labs_available"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/toolbar"
        android:background="@color/ModerateMagenta"
        android:gravity="center_vertical|center_horizontal"
        android:text=""
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/White"
        android:textSize="14sp" />

    <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/txt_labs_available"
                android:background="@color/LightGreyWhite" >
                <com.android.volley.toolbox.NetworkImageView
                   android:id="@+id/lab_photo"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                     />
                <TextView
                    android:id="@+id/txtlabname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/lab_photo"
                    android:textSize="16sp"
                    android:text="" />
                <TextView
                    android:id="@+id/txtcredetion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtlabname"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/lab_photo"
                    android:textSize="12sp"
                    android:textColor="@color/Green"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/txt_fasting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lab_photo"
                    android:layout_marginTop="8dp"
                    
                    android:layout_marginLeft="20dp"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    android:text="Fasting Required"
                    android:visibility="gone" />
            </RelativeLayout>
    
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_above="@+id/rel_payment" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            
            <TextView
                android:id="@+id/txt_testheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="TEST NAME"
                android:textStyle="bold" />
            
            <LinearLayout
             android:id="@+id/layout_tests"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:layout_below="@id/txt_testheading"> 
         </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"                
                android:layout_below="@id/layout_tests"
                >

                <Button
                    android:id="@+id/txt_add_more_tests"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:elevation="5dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:textSize="14sp"
                    android:text="ADD MORE TESTS"
                    android:textColor="@color/Red" />
            </RelativeLayout>

            
            
           
        </RelativeLayout>
    </ScrollView>
     <RelativeLayout
                android:id="@+id/rel_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txt_next" >
			<TextView
                android:id="@+id/txt_billsummery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingTop="8dp"
                android:text="BILL SUMMARY" 
                android:textStyle="bold|normal"
                >
			    
			</TextView>
                
                <RelativeLayout
                    android:id="@+id/rel_layout_mrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_below="@+id/txt_billsummery"
                    android:layout_marginLeft="5dp" >

                    <TextView
                        android:id="@+id/text_mrp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="MRP" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" 
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/text_mrp_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="TextView" 
                            />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_layout_discount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_below="@id/rel_layout_mrp" 
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:id="@+id/txt_discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Okler Discount(-"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/Red" />

                                        
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_discount" 
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/txt_dicvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            android:text="TextView" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_you_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="7dp"
                    android:layout_below="@id/rel_layout_discount"
                    android:layout_marginLeft="5dp" >

                    <TextView
                        android:id="@+id/txt_youpay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="You Pay" 
                        android:textStyle="bold"/>
                    
                                        
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/txt_youpay" 
                        android:layout_marginRight="5dp">

                        <TextView
                            android:id="@+id/txt_youpayvalue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp" />
                       
                    </RelativeLayout>
                </RelativeLayout>
        </RelativeLayout>
<Button
        android:id="@+id/txt_next"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_alignParentLeft="true"
        android:background="@color/ModerateMagenta"
        android:gravity="center_vertical|center_horizontal"
        android:text="NEXT"
        android:layout_above="@+id/bottombar"
        android:textColor="@color/White"
        android:textSize="16sp" />
    <include
        android:id="@+id/bottombar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/layout_bottom_bar" />

</RelativeLayout>